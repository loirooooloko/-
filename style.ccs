body { font-family: Arial, sans-serif; text-align: center; margin: 0; background: #f4f4f4; }
header { background: #0073e6; color: white; padding: 20px; }
.curso { background: white; padding: 15px; margin: 10px auto; width: 80%; max-width: 400px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); }
button { background: #0073e6; color: white; border: none; padding: 10px; cursor: pointer; }
button:hover { background: #005bb5; }
footer { margin-top: 20px; padding: 10px; background: #222; color: white; }
